  <configuration>
    <stop-on-errors>true</stop-on-errors>
    <date-format>MM/dd/yyyy HH:mm</date-format>
    <wildcard>true</wildcard>
  </configuration>

  <mapping>
    <class-a>com.waycooltechnology.dozer.domain.ClassA</class-a>
    <class-b>com.waycooltechnology.dozer.domain.ClassB</class-b>
      <field>
        <a>classA1</a>
        <b>classB1</b>
      </field>
  </mapping>
   <mapping>
    <class-a>com.waycooltechnology.dozer.domain.ClassA1</class-a>
